<div class="container">
  <header class="page-header">
    <h1>
      Backup: <%= name %>
      <small>
        &mdash;
        <%= queue.size %>
        items
      </small>
    </h1>
    <p>
      <a href="/">&laquo; Back</a>
    </p>
  </header>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Items</th>
          </tr>
        </thead>
        <tbody>
          <% queue.items.each do |item| %>
            <tr>
              <td><samp><%= item %></samp></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

