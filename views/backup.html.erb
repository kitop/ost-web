<div class="container">
  <header class="page-header">
    <h1>
      Backup: <%= name %>
      <small>
        &mdash;
        <%= queue.size %>
        items
      </small>
    </h1>
    <p>
      <a href="/">&laquo; Back</a>
    </p>
  </header>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Items</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% queue.items.each do |item| %>
            <tr>
              <td><samp><%= item %></samp></td>
              <td>
                <form action="/backups/<%= queue.href %>" method="post">
                  <input type="hidden" name="item" value="<%= Rack::Utils.escape_html item %>" />
                  <button class="btn btn-link btn-sm btn-block">Re-enqueue</button>
                </form>

                <form action="/backups/<%= queue.href %>" method="post">
                  <input type="hidden" name="_method" value="delete" />
                  <input type="hidden" name="item" value="<%= Rack::Utils.escape_html item %>" />
                  <button class="btn btn-link btn-sm btn-block">Remove</button>
                </form>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

